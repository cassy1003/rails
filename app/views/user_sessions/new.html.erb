<!-- Main content -->
<div class="main-content">
  <!-- Header -->
  <div class="header bg-gradient-owners py-7">
    <div class="container">
      <div class="header-body text-center mb-7">
        <div class="row justify-content-center">
          <div class="<%# col-xl-5 col-lg-6 col-md-8 %>px-5">
            <h1 class="text-white"><%= t '.title' %></h1>
            <p class="text-lead text-white"><%= t '.description_html' %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="separator separator-bottom separator-skew zindex-100">
      <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
        <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
      </svg>
    </div>
  </div>
  <!-- Page content -->
  <div class="container mt--8 pb-5">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-7">
        <div class="card bg-secondary border-0 mb-0">
          <% if false # ログイン後にBASE連携する %>
          <div class="card-header bg-transparent pb-5">
            <div class="text-muted text-center mt-2 mb-3"><small>Sign in with</small></div>
            <div class="btn-wrapper text-center">
              <%#
              <a href="#" class="btn btn-neutral btn-icon">
                <span class="btn-inner--icon"><img src="../assets/img/icons/common/github.svg"></span>
                <span class="btn-inner--text">Github</span>
              </a>
              %>
              <a href="<%= @base_auth_url %>" class="btn btn-neutral btn-icon">
                <span class="btn-inner--icon">
                  <%= image_tag 'base.png' %>
                </span>
              </a>
            </div>
          </div>
          <% end %>
          <div class="card-body px-lg-5 py-lg-5">
            <% if flash[:alert].present? %>
              <div class="text-warning text-center text-sm mt-2 mb-3"><%= flash[:alert] %></div>
            <% end %>

            <%= form_with url: user_sessions_path, local: true do |f| %>
              <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                  </div>
                  <%= f.text_field :email, class: 'form-control', placeholder: t(".placeholder.email"), required: true %>
                </div>
              </div>
              <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                  </div>
                  <%= f.password_field :password, class: 'form-control', placeholder: t(".placeholder.password"), required: true %>
                </div>
              </div>
              <%#
              <div class="custom-control custom-control-alternative custom-checkbox">
                <input class="custom-control-input" id=" customCheckLogin" type="checkbox">
                <label class="custom-control-label" for=" customCheckLogin">
                  <span class="text-muted">Remember me</span>
                </label>
              </div>
              %>
              <div class="text-center">
                <%= f.submit t('.signin'), class: 'btn btn-primary my-4' %>
              </div>
            <% end %>
            <div class="text-center text-muted">
              <small><%= t '.signup_link_html' %></small>
            </div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-6">
            <a href="#" class="text-light"><small><%= t '.forgot_password' %></small></a>
          </div>
          <%# Disalbe create new account
          <div class="col-6 text-right">
            <a href="#" class="text-light"><small>Create new account</small></a>
          </div>
          %>
        </div>
      </div>
    </div>
  </div>
</div>
