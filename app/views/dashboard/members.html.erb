<% if @members.present? %>
<!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col">
        <div class="card">
          <!-- Card header -->
          <div class="card-header border-0">
            <h3 class="mb-0"><%= t '.admin_list' %></h3>
          </div>
          <!-- Light table -->
          <div class="table-responsive">
            <table id="members_table" class="table table-sm align-items-center table-flush">
              <thead class="thead-light">
                <tr>
                  <th scope="col" class="sort" data-sort="budget"><%= t '.created_at' %></th>
                  <th scope="col" class="sort" data-sort="name"><%= t '.name' %></th>
                  <th scope="col" class="sort" data-sort="email"><%= t '.email' %></th>
                  <th scope="col"><%= t '.action' %></th>
                </tr>
              </thead>
              <tbody class="list">
                <% @admins.each do |member| %>
                <tr>
                  <td scope="row" class="member_created_at">
                    <span class="created_at"><%= member.created_at.strftime('%Y/%m/%d %H:%M') %></span>
                  </td>
                  <td scope="row" class="member_name">
                    <span><%= member.name %></span>
                  </td>
                  <th scope="row" class="member_email">
                    <span class="name mb-0 text-sm"><%= member.email %></span>
                  </th>
                  <td class="">
                    <% if member.approved_by.nil? %>
                      <span class="btn btn-sm btn-primary" role="button">
                        <i class="ni ni-fat-add"></i><%= t 'approve' %>
                      </span>
                    <% else %>
                      <span class="btn btn-sm btn-light" role="button">
                        <i class="ni ni-fat-remove"></i><%= t 'delete' %>
                      </span>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="card">
          <!-- Card header -->
          <div class="card-header border-0">
            <h3 class="mb-0"><%= t '.member_list' %></h3>
          </div>
          <!-- Light table -->
          <div class="table-responsive">
            <table id="members_table" class="table table-sm align-items-center table-flush">
              <thead class="thead-light">
                <tr>
                  <th scope="col" class="sort" data-sort="budget"><%= t '.created_at' %></th>
                  <th scope="col" class="sort" data-sort="term"><%= t '.term' %></th>
                  <th scope="col" class="sort" data-sort="name"><%= t '.name' %></th>
                  <th scope="col" class="sort" data-sort="facebook_name"><%= t '.facebook_name' %></th>
                  <th scope="col" class="sort" data-sort="line_name"><%= t '.line_name' %></th>
                  <th scope="col"><%= t '.action' %></th>
                </tr>
              </thead>
              <tbody class="list">
                <% @members.first(10).each do |member| %>
                <tr>
                  <td scope="row" class="member_created_at">
                    <span class="created_at"><%= member.created_at.strftime('%Y/%m/%d %H:%M') %></span>
                  </td>
                  <td scope="row" class="member_term">
                    <span class="term"><%= member.term %><%= t '.term' %></span>
                  </td>
                  <td scope="row" class="member_name">
                    <span><%= member.name %></span>
                  </td>
                  <td scope="row" class="member_facebook_name">
                    <span class="facebook_name"><%= member.facebook_name %></span>
                  </td>
                  <td scope="row" class="member_line_name">
                    <span class="line_name"><%= member.line_name %></span>
                  </td>
                  <td class="">
                    <% if member.approved_by.nil? %>
                      <span class="btn btn-sm btn-primary" role="button">
                        <i class="ni ni-fat-add"></i><%= t 'approve' %>
                      </span>
                    <% else %>
                      <span class="btn btn-sm btn-light" role="button">
                        <i class="ni ni-fat-remove"></i><%= t 'delete' %>
                      </span>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Card footer -->
          <div class="card-footer py-4">
            <nav aria-label="...">
              <ul class="pagination justify-content-end mb-0">
                <li class="page-item disabled">
                  <a class="page-link" href="#" tabindex="-1">
                    <i class="fas fa-angle-left"></i>
                    <span class="sr-only">Previous</span>
                  </a>
                </li>
                <li class="page-item active">
                  <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                  <a class="page-link" href="#">
                    <i class="fas fa-angle-right"></i>
                    <span class="sr-only">Next</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
